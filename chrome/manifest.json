{
  "manifest_version": 3,
  "name": "PoliteGPT",
  "version": "1.3",
  "description": "Blocks or allows ChatGPT messages based on a politeness meter. Includes a friendly popup and logs.",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "PoliteGPT",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content_script.js"],
      "css": ["notice_styles.css"],
      "run_at": "document_end"
    }
  ]
}
