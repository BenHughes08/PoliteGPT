{
  "manifest_version": 3,
  "name": "PoliteGPT Extension",
  "version": "1.0",
  "description": "Enhance interactions with PoliteGPT.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/c/*",
        "https://chatgpt.com/c/*"
      ],
      "js": ["content.js"]
    }
  ]
}
